import cv
import cv2

def preprocess(in):
	out = cv.CreateImage((in.width, in.height), cv.IPL_DEPTH_32F, 1)
	out = cv.CvtColor(in, out, CV_BGR2GRAY)
	cv.ConvertScale(out, out, CV_32F, 1.0/255, 0);

	return out

